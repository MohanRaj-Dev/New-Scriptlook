<section class="articles">
  <h2 class="articles__heading">Posts</h2>

  <ul class="article-ul">
    <% data.forEach(post => { %>
      <li>
        <a href="/post/<%= post._id %>">
          <div class="card">
            <div class="card__image">
              <img src="https://scriptlook.online/uploads/<%= post.image%>" alt="Card Image">
            </div>
            <div class="card__content">
              <h1 class="card__title"><%- post.title %></h1>
              <p class="card__description"><%- post.body.substring(25, 296) %></p>
            </div>
          </div>
          

        </a>
      </li>
    <% }) %>
  </ul>



  <% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %>
 


<script src="../public/js/filter.js"></script>

</section>
